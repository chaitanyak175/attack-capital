// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for Better-Auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  calls         Call[]
  sessions      Session[]
  accounts      Account[]
  
  @@map("users")
}

// Session model for Better-Auth
model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

// Account model for Better-Auth (OAuth providers)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Verification Token model for Better-Auth
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Call model for logging all outbound calls
model Call {
  id                String    @id @default(cuid())
  userId            String?   // Made optional for dashboard-first approach
  targetNumber      String
  amdStrategy       AmdStrategy
  status            CallStatus
  amdResult         AmdResult?
  confidence        Float?
  duration          Int?      // Duration in seconds
  cost              Float?    // Cost in USD
  errorMessage      String?
  metadata          Json?     // Additional data like audio URLs, logs
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations - made optional
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("calls")
}

// Enum for AMD strategies
enum AmdStrategy {
  TWILIO_NATIVE
  JAMBONZ_SIP
  HUGGINGFACE_MODEL
  GEMINI_FLASH
  
  @@map("amd_strategy")
}

// Enum for call status
enum CallStatus {
  INITIATED
  RINGING
  ANSWERED
  COMPLETED
  FAILED
  CANCELLED
  
  @@map("call_status")
}

// Enum for AMD detection results
enum AmdResult {
  HUMAN
  MACHINE
  VOICEMAIL
  UNDECIDED
  TIMEOUT
  ERROR
  
  @@map("amd_result")
}
